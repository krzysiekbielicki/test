<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical">

	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dip">
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="left" android:id="@+id/directionrecord.type"  android:layout_marginRight="5dip"/>
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="left" android:id="@+id/directionrecord.stopname" android:textColor="#fff" android:singleLine="true" android:ellipsize="end"/>
	</LinearLayout>
	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/directionrecord.string"/>
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/directionrecord.line" android:textColor="@color/orange"/>
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/directionrecord.time"/>
	</LinearLayout>
</LinearLayout>
